<!-- app/views/users/_index.html.erb -->
<div class="row">
  <% @users.each do |user| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body text-center">
          <%= link_to user_path(user) do %>
            <%= image_tag user.avatar.url, class: 'rounded-circle', size: '100x100', alt: user.decorate.full_name %>
          <% end %>
          <h5 class="mt-3"><%= link_to user.decorate.full_name, user_path(user) %></h5>
          <hr>
            <p>みんなに一言:</p>
            <p class="mt-3"><%= user.introduction %></p>
          <hr>
          <div class="mt-3">
            <div id="follow-ajax-<%= user.id %>">
              <%= render 'relationships/btn', user: user, options: { class: 'btn btn-info' } %>
            </div>
          </div>
        </div>
      </div>
    </div>  
  <% end %>
</div>
